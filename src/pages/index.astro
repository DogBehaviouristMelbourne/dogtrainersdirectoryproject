---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WaggingWisdom from '../components/WaggingWisdom.astro';
import PawsonalityQuiz from '../components/PawsonalityQuiz.astro';
import TestimonialSection from '../components/TestimonialSection.astro';
import BlogTeaser from '../components/BlogTeaser.astro';
---

<Layout title="Dog Trainers Directory Melbourne" description="Connect with certified dog trainers in Melbourne. Specializing in puppy training, anxiety management, and behavior modification. Find the perfect trainer for your furry friend.">
    <Header />
    
    <main id="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <div class="hero-content">
                    <div class="hero-text">
                        <h1>Find the Perfect Dog Trainer in Melbourne</h1>
                        <p class="hero-subtitle">Connect with certified professionals who understand your dog's unique needs. From puppy socialization to anxiety management, discover trainers who use positive, science-based methods.</p>
                        <div class="hero-actions">
                            <a href="/trainers" class="button primary">Start Your Search</a>
                            <a href="#quiz-section" class="button secondary">Take Our Quiz</a>
                        </div>
                        <div class="hero-stats">
                            <div class="stat">
                                <span class="stat-number">50+</span>
                                <span class="stat-label">Expert Trainers</span>
                            </div>
                            <div class="stat">
                                <span class="stat-number">3</span>
                                <span class="stat-label">Specialisations</span>
                            </div>
                            <div class="stat">
                                <span class="stat-number">100%</span>
                                <span class="stat-label">Positive Methods</span>
                            </div>
                        </div>
                    </div>
                    <div class="hero-image">
                        <img src="/images/hero-illustration.png" alt="Happy dog training session in Melbourne park" width="600" height="400">
                    </div>
                </div>
            </div>
        </section>

        <!-- Categories Section -->
        <section class="categories-section">
            <div class="container">
                <h2>Training Specialisations</h2>
                <p class="section-subtitle">Our trainers specialise in three key areas to meet every dog's needs</p>
                
                <div class="categories-grid">
                    <a href="/trainers?category=puppy-training" class="category-card" aria-label="View trainers for Puppy Training & Socialisation">
                        <div class="category-icon">
                            <img src="/images/puppy-training-icon.png" alt="Puppy Training" width="80" height="80">
                        </div>
                        <h3>Puppy Training & Socialisation</h3>
                        <p>Perfect for puppies under 16 weeks. Focus on early socialisation, basic manners, and building confidence through positive experiences.</p>
                        <ul>
                            <li>Early socialisation programs</li>
                            <li>House training fundamentals</li>
                            <li>Basic obedience commands</li>
                            <li>Confidence building exercises</li>
                        </ul>
                    </a>
                    
                    <a href="/trainers?category=anxiety-stress-management" class="category-card" aria-label="View trainers for Anxiety & Stress Management">
                        <div class="category-icon">
                            <img src="/images/anxiety-management-icon.png" alt="Anxiety Management" width="80" height="80">
                        </div>
                        <h3>Anxiety & Stress Management</h3>
                        <p>Specialised support for dogs dealing with fear, anxiety, or trauma. Using gentle counter-conditioning and desensitisation techniques.</p>
                        <ul>
                            <li>Separation anxiety solutions</li>
                            <li>Fear and phobia treatment</li>
                            <li>Reactive behaviour modification</li>
                            <li>Trauma recovery programs</li>
                        </ul>
                    </a>
                    
                    <a href="/trainers?category=behaviour-obedience" class="category-card" aria-label="View trainers for Behaviour Training & Obedience">
                        <div class="category-icon">
                            <img src="/images/behavior-training-icon.png" alt="Behavior Training" width="80" height="80">
                        </div>
                        <h3>Behaviour Training & Obedience</h3>
                        <p>Comprehensive training for dogs of all ages. Teaching essential commands and solving common behavioural issues.</p>
                        <ul>
                            <li>Basic to advanced obedience</li>
                            <li>Leash manners and recall</li>
                            <li>Jumping and barking solutions</li>
                            <li>Impulse control training</li>
                        </ul>
                    </a>
                </div>
            </div>
        </section>

        <!-- Wagging Wisdom Carousel -->
        <WaggingWisdom />

        <!-- Testimonials Section -->
        <TestimonialSection />

        <!-- Paw-sonality Quiz -->
        <PawsonalityQuiz />

        <!-- Blog Teaser Section -->
        <BlogTeaser />

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <div class="cta-content">
                    <h2>Ready to Start Your Dog's Training Journey?</h2>
                    <p>Join hundreds of Melbourne dog owners who have found success with our certified trainers.</p>
                    <a href="/trainers" class="button primary">Find a Trainer Now</a>
                </div>
            </div>
        </section>
    </main>
    
    <Footer />
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--color-background-light) 0%, #f8f6f3 100%);
        padding: 4rem 0;
        min-height: 70vh;
        display: flex;
        align-items: center;
    }

    .hero-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .hero-text h1 {
        font-size: 3.5em;
        margin-bottom: 1rem;
        color: var(--color-text-light);
        line-height: 1.1;
    }

    .hero-subtitle {
        font-size: 1.3em;
        color: var(--color-text-light);
        opacity: 0.8;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        margin-bottom: 3rem;
    }

    .hero-stats {
        display: flex;
        gap: 2rem;
    }

    .stat {
        text-align: center;
    }

    .stat-number {
        display: block;
        font-size: 2em;
        font-weight: 700;
        color: var(--color-accent-teal);
        font-family: 'Balsamiq Sans', cursive;
    }

    .stat-label {
        font-size: 0.9em;
        color: var(--color-text-light);
        opacity: 0.7;
    }

    .hero-image img {
        width: 100%;
        height: auto;
        border-radius: 16px;
        box-shadow: var(--shadow-lg);
    }

    /* Categories Section */
    .categories-section {
        padding: 5rem 0;
        background-color: var(--color-background-light);
    }

    .categories-section h2 {
        text-align: center;
        font-size: 2.5em;
        margin-bottom: 1rem;
        color: var(--color-text-light);
    }

    .section-subtitle {
        text-align: center;
        font-size: 1.2em;
        color: var(--color-text-light);
        opacity: 0.8;
        margin-bottom: 3rem;
    }

    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .category-card {
        background-color: var(--color-card-bg-light);
        border: 1px solid var(--color-border-light);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        box-shadow: var(--shadow-sm);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .category-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
    }

    .category-icon {
        margin-bottom: 1.5rem;
    }

    .category-icon img {
        width: 80px;
        height: 80px;
        border-radius: 12px;
    }

    .category-card h3 {
        color: var(--color-accent-teal);
        margin-bottom: 1rem;
        font-size: 1.5em;
    }

    .category-card p {
        color: var(--color-text-light);
        opacity: 0.8;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .category-card ul {
        list-style: none;
        padding: 0;
        text-align: left;
    }

    .category-card ul li {
        color: var(--color-text-light);
        opacity: 0.7;
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .category-card ul li::before {
        content: 'üêæ';
        position: absolute;
        left: 0;
    }

    /* Quiz Section - Remove old styles */

    /* CTA Section */
    .cta-section {
        padding: 4rem 0;
        background-color: var(--color-card-bg-light);
        text-align: center;
    }

    .cta-content h2 {
        color: var(--color-text-light);
        margin-bottom: 1rem;
    }

    .cta-content p {
        font-size: 1.2em;
        color: var(--color-text-light);
        opacity: 0.8;
        margin-bottom: 2rem;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero-content {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
        }

        .hero-text h1 {
            font-size: 2.5em;
        }

        .hero-actions {
            flex-direction: column;
            align-items: center;
        }

        .hero-stats {
            justify-content: center;
        }

        .categories-grid {
            grid-template-columns: 1fr;
        }

        .category-card {
            padding: 1.5rem;
        }
    }
</style>

