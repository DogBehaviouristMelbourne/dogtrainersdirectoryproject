---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WaggingWisdom from '../components/WaggingWisdom.astro';
import PawsonalityQuiz from '../components/PawsonalityQuiz.astro';
import TestimonialSection from '../components/TestimonialSection.astro';
import BlogTeaser from '../components/BlogTeaser.astro';
---

<Layout title="Dog Trainers Directory Melbourne" description="Connect with certified dog trainers in Melbourne. Specializing in puppy training, anxiety management, and behavior modification. Find the perfect trainer for your furry friend.">
    <Header />
    
    <main id="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <div class="hero-content">
                    <div class="hero-image-container">
                        <div class="hero-image">
                            <div class="hero-overlay">
                                <h1 class="hero-title">Find the Perfect Dog Trainer in Melbourne</h1>
                                <p class="hero-subtitle-overlay">Connect with certified professionals who understand your dog's unique needs.</p>
                            </div>
                            <img src="/images/hero-illustration.png" alt="Happy dog training session in Melbourne park" width="600" height="400">
                        </div>
                        <!-- STATS BAR MOVED OUT OF .hero-image FOR BETTER STACKING -->
                        <div class="hero-stats">
                            <div class="stat">
                                <span class="stat-number">50+</span>
                                <span class="stat-label">Expert Trainers</span>
                            </div>
                            <div class="stat">
                                <span class="stat-number">3</span>
                                <span class="stat-label">Specialisations</span>
                            </div>
                            <div class="stat">
                                <span class="stat-number">100%</span>
                                <span class="stat-label">Positive Methods</span>
                            </div>
                        </div>
                    </div>
                    <div class="hero-text">
                        <p class="hero-subtitle">From puppy socialization to anxiety management, discover trainers who use positive, science-based methods.</p>
                        <div class="hero-actions">
                            <a href="/trainers" class="button primary">Start Your Search</a>
                            <a href="#quiz-section" class="button secondary">Take Our Quiz</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Categories Section -->
        <section class="categories-section">
            <div class="container">
                <h2>Training Specialisations</h2>
                <p class="section-subtitle">Our trainers specialise in three key areas to meet every dog's needs</p>
                
                <div class="categories-grid">
                    <a href="/trainers?category=puppy-training" class="category-card" aria-label="View trainers for Puppy Training & Socialisation">
                        <div class="category-icon">
                            <img src="/images/puppy-training-icon.png" alt="Puppy Training" width="80" height="80">
                        </div>
                        <h3>Puppy Training & Socialisation</h3>
                        <p>Perfect for puppies under 16 weeks. Focus on early socialisation, basic manners, and building confidence through positive experiences.</p>
                        <ul>
                            <li>Early socialisation programs</li>
                            <li>House training fundamentals</li>
                            <li>Basic obedience commands</li>
                            <li>Confidence building exercises</li>
                        </ul>
                    </a>
                    
                    <a href="/trainers?category=anxiety-stress-management" class="category-card" aria-label="View trainers for Anxiety & Stress Management">
                        <div class="category-icon">
                            <img src="/images/anxiety-management-icon.png" alt="Anxiety Management" width="80" height="80">
                        </div>
                        <h3>Anxiety & Stress Management</h3>
                        <p>Specialised support for dogs dealing with fear, anxiety, or trauma. Using gentle counter-conditioning and desensitisation techniques.</p>
                        <ul>
                            <li>Separation anxiety solutions</li>
                            <li>Fear and phobia treatment</li>
                            <li>Reactive behaviour modification</li>
                            <li>Trauma recovery programs</li>
                        </ul>
                    </a>
                    
                    <a href="/trainers?category=behaviour-obedience" class="category-card" aria-label="View trainers for Behaviour Training & Obedience">
                        <div class="category-icon">
                            <img src="/images/behavior-training-icon.png" alt="Behavior Training" width="80" height="80">
                        </div>
                        <h3>Behaviour Training & Obedience</h3>
                        <p>Comprehensive training for dogs of all ages. Teaching essential commands and solving common behavioural issues.</p>
                        <ul>
                            <li>Basic to advanced obedience</li>
                            <li>Leash manners and recall</li>
                            <li>Jumping and barking solutions</li>
                            <li>Impulse control training</li>
                        </ul>
                    </a>
                </div>
            </div>
        </section>

        <!-- Wagging Wisdom Carousel -->
        <WaggingWisdom />

        <!-- Testimonials Section -->
        <TestimonialSection />

        <!-- Paw-sonality Quiz -->
        <PawsonalityQuiz />

        <!-- Blog Teaser Section -->
        <BlogTeaser />

        <!-- Trainer Promotion Section -->
        <section class="trainer-promotion-section">
            <div class="container">
                <div class="promotion-content">
                    <div class="promotion-text">
                        <h2>üåü Are You a Dog Trainer?</h2>
                        <p>Join Melbourne's most trusted directory and connect with clients who need your expertise.</p>
                        <ul class="promotion-benefits">
                            <li>‚úÖ Instant online presence</li>
                            <li>‚úÖ Premium featuring options</li>
                            <li>‚úÖ Up to 5x more client inquiries</li>
                        </ul>
                    </div>
                    <div class="promotion-actions">
                        <a href="/trainers#premium" class="button primary">View Premium Plans</a>
                        <a href="/submit" class="button secondary">List Your Services</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <div class="cta-content">
                    <h2>Ready to Start Your Dog's Training Journey?</h2>
                    <p>Join hundreds of Melbourne dog owners who have found success with our certified trainers.</p>
                    <a href="/trainers" class="button primary">Find a Trainer Now</a>
                </div>
            </div>
        </section>
    </main>
    
    <Footer />
</Layout>

<style>
/* --- HERO SECTION FIXES --- */

.hero-section {
    background: var(--color-background-light);
    padding: 1.5rem 1rem;
    display: flex;
    align-items: center;
    overflow-x: hidden;
}

.hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 100%;
    width: 100%;
    margin: 0 auto;
    gap: 1.5rem;
}

.hero-image-container {
    order: 1;
    position: relative;
    width: 100%;
    max-width: 350px;
    margin-bottom: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
}

/* Keep overlay inside hero-image, but make hero-image static instead of relative */
.hero-image {
    background: linear-gradient(135deg, #4a9b8e 0%, #f4a261 50%, #e76f51 100%);
    border-radius: 20px;
    padding: 1.5rem;
    width: 100%;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    min-height: 280px;
    position: static; /* was relative */
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 0.5rem;
}

.hero-overlay {
    position: static; /* was absolute */
    background: rgba(255,255,255,0.96);
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.10);
    margin-bottom: 0.75rem;
}

.hero-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    max-width: 100%;
    margin: 0;
}

/* Move hero-stats outside hero-image and give it its own styling */
.hero-stats {
    width: 100%;
    display: flex;
    justify-content: space-between;
    background: rgba(255,255,255,0.96);
    padding: 0.8rem 0.5rem;
    border-radius: 14px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    backdrop-filter: blur(8px);
    margin: 0;
    gap: 0.5rem;
}

.stat {
    text-align: center;
    flex: 1 1 0;
    min-width: 0;
    overflow: hidden;
}

.stat-number {
    display: block;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-accent-teal);
    font-family: 'Balsamiq Sans', cursive;
    margin-bottom: 0.1rem;
    line-height: 1;
    word-break: break-word;
}

.stat-label {
    font-size: 0.68rem;
    color: var(--color-text-light);
    opacity: 0.8;
    font-weight: 500;
    line-height: 1.1;
    display: block;
    white-space: normal;
}

/* Responsive: Stack stats vertically on very small screens */
@media (max-width: 400px) {
    .hero-stats {
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }
}

/* Rest of your original styles remain unchanged (categories, quiz, CTA, etc.) */

.hero-text {
    order: 2;
    width: 100%;
    max-width: 400px;
    z-index: 2;
}

.hero-subtitle {
    font-size: 0.95rem;
    color: var(--color-text-light);
    opacity: 0.85;
    margin-bottom: 1.5rem;
    line-height: 1.5;
    text-align: center;
    max-width: 100%;
    padding: 0 0.5rem;
    display: block;
    visibility: visible;
}

.hero-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    align-items: center;
}

.hero-actions .button {
    width: 100%;
    max-width: 280px;
    padding: 1rem 2rem;
    font-size: 1rem;
    border-radius: 25px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
}

.hero-actions .button.primary {
    background: var(--color-accent-mustard);
    color: var(--color-text-light);
}

.hero-actions .button.secondary {
    background: transparent;
    border: 2px solid var(--color-border-light);
    color: var(--color-text-light);
}

/* Desktop adjustments */
@media (min-width: 768px) {
    .hero-section {
        padding: 4rem 2rem;
        min-height: 85vh;
    }

    .hero-content {
        max-width: 1200px;
        flex-direction: row;
        gap: 4rem;
        text-align: left;
    }

    .hero-text {
        order: 1;
        flex: 1;
        max-width: none;
    }

    .hero-image-container {
        order: 2;
        flex: 1;
        max-width: 500px;
        position: relative;
    }

    .hero-image {
        max-width: 500px;
        min-height: 350px;
    }

    .hero-overlay {
        padding: 1.5rem;
    }

    .hero-title {
        font-size: 2.2rem;
        margin-bottom: 1rem;
    }

    .hero-subtitle-overlay {
        font-size: 1.1rem;
    }

    .hero-subtitle {
        font-size: 1.3rem;
        text-align: left;
        padding: 0;
    }

    .hero-actions {
        flex-direction: row;
        justify-content: flex-start;
    }

    .hero-actions .button {
        width: auto;
        max-width: none;
    }

    .hero-stats {
        gap: 2rem;
        padding: 1.5rem 2rem;
    }

    .stat-number {
        font-size: 2.2rem;
    }

    .stat-label {
        font-size: 0.9rem;
    }
}

/* Categories Section */
.categories-section {
    padding: 5rem 0;
    background-color: var(--color-background-light);
}

.categories-section h2 {
    text-align: center;
    font-size: 2.5em;
    margin-bottom: 1rem;
    color: var(--color-text-light);
}

.section-subtitle {
    text-align: center;
    font-size: 1.2em;
    color: var(--color-text-light);
    opacity: 0.8;
    margin-bottom: 3rem;
}

.categories-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 3rem;
}

@media (min-width: 768px) {
    .categories-grid {
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }
}

.category-card {
    background-color: var(--color-card-bg-light);
    border: 1px solid var(--color-border-light);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.category-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
}

.category-icon {
    margin-bottom: 1.5rem;
}

.category-icon img {
    width: 80px;
    height: 80px;
    border-radius: 12px;
}

.category-card h3 {
    color: var(--color-accent-teal);
    margin-bottom: 1rem;
    font-size: 1.5em;
}

.category-card p {
    color: var(--color-text-light);
    opacity: 0.8;
    margin-bottom: 1.5rem;
    line-height: 1.6;
}

.category-card ul {
    list-style: none;
    padding: 0;
    text-align: left;
}

.category-card ul li {
    color: var(--color-text-light);
    opacity: 0.7;
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
}

.category-card ul li::before {
    content: 'üêæ';
    position: absolute;
    left: 0;
}

/* Quiz Section - Remove old styles */

/* CTA Section */
.cta-section {
    padding: 4rem 0;
    background-color: var(--color-card-bg-light);
    text-align: center;
}

.cta-content h2 {
    color: var(--color-text-light);
    margin-bottom: 1rem;
}

.cta-content p {
    font-size: 1.2em;
    color: var(--color-text-light);
    opacity: 0.8;
    margin-bottom: 2rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero-section {
        padding: 1.2rem 0.8rem 1.5rem 0.8rem;
        min-height: auto;
    }

    .hero-content {
        gap: 1.2rem;
    }

    .hero-image-container {
        max-width: 320px;
    }

    .hero-image {
        padding: 1.2rem;
        min-height: 260px;
    }

    .hero-overlay {
        padding: 0.8rem;
    }

    .hero-title {
        font-size: 1rem;
        margin-bottom: 0.4rem;
    }

    .hero-subtitle-overlay {
        font-size: 0.75rem;
    }

    .hero-subtitle {
        font-size: 0.9rem;
        margin-bottom: 1.2rem;
        opacity: 0.9;
        display: block !important;
        visibility: visible !important;
    }

    .hero-stats {
        padding: 0.8rem 0.6rem;
    }

    .stat-number {
        font-size: 1.2rem;
    }

    .stat-label {
        font-size: 0.6rem;
    }

    .hero-actions {
        flex-direction: column;
        align-items: center;
    }

    .hero-actions .button {
        max-width: 260px;
        padding: 0.9rem 1.5rem;
    }

    .categories-grid {
        grid-template-columns: 1fr;
    }

    .category-card {
        padding: 1.5rem;
    }
}

/* Trainer Promotion Section */
.trainer-promotion-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, #e0f7fa 0%, #e8f5e9 100%);
    border-top: 1px solid rgba(0,0,0,0.05);
    border-bottom: 1px solid rgba(0,0,0,0.05);
}

.promotion-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 3rem;
    text-align: center;
}

.promotion-text {
    flex: 1;
}

.promotion-text h2 {
    font-size: 2.2rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
}

.promotion-text p {
    font-size: 1.2rem;
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
}

.promotion-benefits {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
}

.promotion-benefits li {
    color: var(--color-text-dark);
    font-weight: 500;
}

.promotion-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

@media (max-width: 768px) {
    .promotion-content {
        flex-direction: column;
        text-align: center;
        gap: 2rem;
    }
    
    .promotion-text h2 {
        font-size: 1.8rem;
    }
    
    .promotion-actions {
        width: 100%;
    }
    
    .promotion-actions .button {
        flex: 1;
        min-width: 150px;
    }
}
</style>
