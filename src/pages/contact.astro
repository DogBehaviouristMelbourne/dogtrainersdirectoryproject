---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SuccessModal from '../components/SuccessModal.astro';

const url = Astro.request.url;
const modalVisible = url.includes('submitted=contact');
const modalMessage = 'Your message has been sent successfully!';
---

<Layout title="Contact Us" description="Get in touch with Dog Trainers Directory Melbourne. Have questions or need help finding the right trainer for your dog?">
  <Header />
  <main id="main-content">
    <section class="container">
    <h1>Contact Us</h1>
    <form id="contact-form">
      <label>
        Name
        <input type="text" id="contact-name" required />
      </label>
      <label>
        Email
        <input type="email" id="contact-email" required />
      </label>
      <label>
        Message
        <textarea id="contact-message" required></textarea>
      </label>
      <button type="submit">Send</button>
      <span id="form-loading" style="display:none;">Sending...</span>
    </form>
    <p id="contact-status"></p>
  </section>
  <SuccessModal visible={modalVisible} message={modalMessage} />
  <script type="module">
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm';

    const supabase = createClient(
      import.meta.env.VITE_SUPABASE_URL,
      import.meta.env.VITE_SUPABASE_ANON_KEY
    );

    const form = document.querySelector('#contact-form');
    const loading = document.querySelector('#form-loading');
    const status = document.querySelector('#contact-status');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      loading.style.display = 'inline-block';
      status.textContent = '';

      const name = document.querySelector('#contact-name').value.trim();
      const email = document.querySelector('#contact-email').value.trim();
      const message = document.querySelector('#contact-message').value.trim();

      const { error } = await supabase.from('contact_messages').insert({ name, email, message });

      loading.style.display = 'none';

      if (error) {
        status.textContent = '‚ùå Something went wrong.';
      } else {
        window.location.href = window.location.pathname + '?submitted=contact';
      }
    });
  </script>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-accent-teal);
  }

  p {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--color-text-light);
  }

  a {
    color: var(--color-accent-teal);
    text-decoration: underline;
  }

  a:hover {
    color: var(--color-accent-dark);
  }

  form {
    display: grid;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  label {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  input, textarea {
    padding: 0.5rem;
    font-size: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    background-color: var(--color-bg);
  }

  button {
    padding: 0.75rem;
    font-size: 1.1rem;
    color: #fff;
    background-color: var(--color-accent-teal);
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  button:hover {
    background-color: var(--color-accent-dark);
  }

  #form-loading {
    margin-left: 0.5rem;
    font-size: 1rem;
    color: var(--color-accent-teal);
  }
</style>
  </main>
  <Footer />
</Layout>

