---
import Layout from '../layouts/Layout.astro'

const url = new URL(Astro.request.url)
const trainer_name = url.searchParams.get('trainer') || 'Trainer'
const email = url.searchParams.get('email') || ''
---

<Layout title="Complete Your Listing Payment">
  <section class="container">
    <div class="payment-page">
      <h1 class="page-title">Almost There, {trainer_name}! üéâ</h1>
      
      <div class="progress-bar">
        <div class="step completed">‚úÖ Application</div>
        <div class="step active">üí≥ Payment</div>
        <div class="step">‚úÖ Approval</div>
        <div class="step">üéØ Live Listing</div>
      </div>

      <div class="pricing-summary">
        <h2>Your Standard Listing</h2>
        <div class="price-breakdown">
          <div class="item">
            <span>Standard Directory Listing</span>
            <span>$79.00</span>
          </div>
          <div class="item total">
            <span><strong>Total (One-time payment)</strong></span>
            <span><strong>$79.00</strong></span>
          </div>
        </div>
        
        <div class="value-points">
          <h3>What You Get:</h3>
          <ul>
            <li>‚úÖ Complete trainer profile with photo</li>
            <li>‚úÖ Contact details & website links</li>
            <li>‚úÖ Service categories & specializations</li>
            <li>‚úÖ SEO-optimized listing page</li>
            <li>‚úÖ <strong>Lifetime listing</strong> ‚Äî no renewal fees!</li>
            <li>‚úÖ Update requests anytime</li>
          </ul>
        </div>
      </div>

      <div class="payment-options">
        <h2>Choose Your Payment Method</h2>
        
        <!-- Stripe Payment Button (placeholder) -->
        <button class="payment-btn stripe-btn" onclick="handleStripePayment()">
          <span class="btn-icon">üí≥</span>
          Pay with Card (Stripe)
          <span class="btn-secure">üîí Secure</span>
        </button>
        
        <!-- PayPal Payment Button (placeholder) -->
        <button class="payment-btn paypal-btn" onclick="handlePayPalPayment()">
          <span class="btn-icon">üü°</span>
          Pay with PayPal
          <span class="btn-secure">üîí Secure</span>
        </button>
        
        <!-- Bank Transfer Option -->
        <button class="payment-btn bank-btn" onclick="showBankDetails()">
          <span class="btn-icon">üè¶</span>
          Bank Transfer
          <span class="btn-note">(Manual approval required)</span>
        </button>
      </div>

      <!-- Bank Transfer Details (hidden by default) -->
      <div id="bank-details" class="bank-details" style="display: none;">
        <h3>Bank Transfer Details</h3>
        <div class="bank-info">
          <p><strong>Account Name:</strong> Dog Trainers Directory Melbourne</p>
          <p><strong>BSB:</strong> 123-456</p>
          <p><strong>Account:</strong> 789012345</p>
          <p><strong>Reference:</strong> LISTING-{trainer_name.replace(/\s+/g, '').toUpperCase()}</p>
          <p><strong>Amount:</strong> $79.00 AUD</p>
        </div>
        <p class="bank-note">
          ‚è∞ <strong>Important:</strong> Please include the reference code and email us at 
          <a href="mailto:payments@dogtrainersdirectory.com.au">payments@dogtrainersdirectory.com.au</a> 
          after transfer. Manual verification takes 1-2 business days.
        </p>
      </div>

      <div class="guarantee">
        <h3>üí∞ 30-Day Money-Back Guarantee</h3>
        <p>Not satisfied with your listing performance? We'll refund your payment within 30 days, no questions asked.</p>
      </div>

      <div class="support">
        <p>Need help? <a href="/contact">Contact our support team</a> or email 
        <a href="mailto:support@dogtrainersdirectory.com.au">support@dogtrainersdirectory.com.au</a></p>
      </div>
    </div>
  </section>

  <style>
    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem;
    }

    .payment-page {
      text-align: center;
    }

    .page-title {
      font-family: 'Balsamiq Sans', cursive, sans-serif;
      font-size: 2.2rem;
      color: var(--color-accent-teal);
      margin-bottom: 2rem;
    }

    .progress-bar {
      display: flex;
      justify-content: space-between;
      margin-bottom: 3rem;
      padding: 0 1rem;
    }

    .step {
      flex: 1;
      padding: 0.5rem;
      font-size: 0.9rem;
      color: #999;
      position: relative;
    }

    .step.completed {
      color: var(--color-accent-teal);
      font-weight: bold;
    }

    .step.active {
      color: var(--color-accent-mustard);
      font-weight: bold;
    }

    .pricing-summary {
      background: #f8f9fa;
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      text-align: left;
    }

    .pricing-summary h2 {
      color: var(--color-accent-teal);
      margin-bottom: 1rem;
      text-align: center;
    }

    .price-breakdown {
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      margin-bottom: 1.5rem;
    }

    .item {
      display: flex;
      justify-content: space-between;
      padding: 1rem;
      background: white;
    }

    .item + .item {
      border-top: 1px solid #eee;
    }

    .item.total {
      background: var(--color-accent-teal);
      color: white;
    }

    .value-points h3 {
      color: var(--color-accent-teal);
      margin-bottom: 1rem;
    }

    .value-points ul {
      text-align: left;
      padding-left: 0;
      list-style: none;
    }

    .value-points li {
      padding: 0.3rem 0;
    }

    .payment-options {
      margin: 2rem 0;
    }

    .payment-options h2 {
      color: var(--color-accent-teal);
      margin-bottom: 1.5rem;
    }

    .payment-btn {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 1rem 1.5rem;
      margin-bottom: 1rem;
      border: 2px solid #ddd;
      border-radius: 8px;
      background: white;
      font-size: 1.1rem;
      cursor: pointer;
      transition: all 0.3s;
    }

    .payment-btn:hover {
      border-color: var(--color-accent-teal);
      transform: translateY(-2px);
    }

    .stripe-btn:hover {
      background: #635bff;
      color: white;
    }

    .paypal-btn:hover {
      background: #0070ba;
      color: white;
    }

    .bank-btn:hover {
      background: var(--color-accent-teal);
      color: white;
    }

    .btn-icon {
      font-size: 1.3rem;
    }

    .btn-secure {
      font-size: 0.9rem;
      color: #28a745;
      font-weight: bold;
    }

    .btn-note {
      font-size: 0.8rem;
      color: #666;
    }

    .bank-details {
      background: #fff3cd;
      border: 1px solid #ffeaa7;
      border-radius: 8px;
      padding: 1.5rem;
      margin: 1rem 0;
      text-align: left;
    }

    .bank-details h3 {
      color: var(--color-accent-teal);
      margin-bottom: 1rem;
    }

    .bank-info p {
      margin: 0.5rem 0;
      font-family: monospace;
      background: white;
      padding: 0.3rem 0.8rem;
      border-radius: 4px;
    }

    .bank-note {
      background: #d4edda;
      border: 1px solid #c3e6cb;
      border-radius: 6px;
      padding: 1rem;
      margin-top: 1rem;
      font-size: 0.95rem;
    }

    .guarantee {
      background: var(--color-accent-mustard);
      color: white;
      border-radius: 12px;
      padding: 1.5rem;
      margin: 2rem 0;
    }

    .guarantee h3 {
      margin-bottom: 0.5rem;
    }

    .support {
      margin-top: 2rem;
      font-size: 0.9rem;
      color: #666;
    }

    .support a {
      color: var(--color-accent-teal);
    }

    @media (max-width: 768px) {
      .container {
        padding: 1rem;
      }
      
      .progress-bar {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .step {
        text-align: center;
      }
    }
  </style>

  <script>
    // Placeholder functions for payment integration
    function handleStripePayment() {
      alert('üöß Stripe integration coming soon! Please use bank transfer for now.');
      // TODO: Integrate with Stripe
      // stripe.redirectToCheckout({ sessionId: 'session_id' });
    }

    function handlePayPalPayment() {
      alert('üöß PayPal integration coming soon! Please use bank transfer for now.');
      // TODO: Integrate with PayPal
      // paypal.Buttons().render('#paypal-button-container');
    }

    function showBankDetails() {
      const bankDetails = document.getElementById('bank-details');
      if (bankDetails.style.display === 'none') {
        bankDetails.style.display = 'block';
        bankDetails.scrollIntoView({ behavior: 'smooth' });
      } else {
        bankDetails.style.display = 'none';
      }
    }

    // Send payment confirmation email when page loads
    window.addEventListener('load', function() {
      // TODO: Send confirmation email to trainer
      console.log('Payment page loaded for trainer: {trainer_name}');
    });
  </script>
</Layout>
