---
import posts from '../data/blog.json'
const recent = posts.slice(0, 2)
---

<section class="blog-teaser">
  <h2>From the Blog</h2>
  <div class="teaser-grid">
    {recent.map((post) => (
      <article class="teaser-card">
        <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
        <p>{post.excerpt}</p>
        <a class="read-more" href={`/blog/${post.slug}`}>Read more →</a>
      </article>
    ))}
  </div>
  <a href="/blog" class="view-all">View all blog posts →</a>

  <style>
    .blog-teaser {
      padding: 2.5rem 0 2rem 0;
      background: var(--color-background-light);
      border-top: 4px solid var(--color-accent-mustard);
      margin-top: 2.5rem;
    }
    .blog-teaser h2 {
      font-size: 1.6rem;
      margin-bottom: 1rem;
      color: var(--color-accent-teal);
      font-family: 'Balsamiq Sans', cursive, sans-serif;
      text-align: center;
    }
    .teaser-grid {
      display: grid;
      gap: 1.5rem;
      max-width: 800px;
      margin: 0 auto;
    }
    .teaser-card {
      background: var(--color-card-bg-light);
      padding: 1.2rem 1.2rem 1rem 1.2rem;
      border-left: 4px solid var(--color-accent-terracotta);
      border-radius: 8px;
      box-shadow: var(--shadow-sm);
    }
    .teaser-card h3 {
      margin-bottom: 0.5rem;
      color: var(--color-accent-teal);
      font-size: 1.13em;
      font-family: 'Balsamiq Sans', cursive, sans-serif;
    }
    .teaser-card p {
      color: var(--color-text-light);
      font-size: 1.05em;
      margin-bottom: 0.7em;
    }
    .read-more {
      font-size: 0.97rem;
      color: var(--color-accent-teal);
      text-decoration: underline;
      font-weight: 500;
    }
    .read-more:hover {
      color: var(--color-accent-mustard);
    }
    .view-all {
      display: block;
      margin: 1.5rem auto 0 auto;
      font-weight: bold;
      color: var(--color-accent-terracotta);
      text-align: center;
      font-size: 1.08em;
      text-decoration: underline;
    }
    .view-all:hover {
      color: var(--color-accent-mustard);
    }
  </style>
</section>
