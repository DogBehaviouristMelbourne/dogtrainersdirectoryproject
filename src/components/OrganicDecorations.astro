<div class="organic-decorations" aria-hidden="true">
    <!-- Brushstroke divider -->
    <svg class="brush-stroke" viewBox="0 0 400 20" preserveAspectRatio="none">
        <path d="M0,10 C100,0 300,20 400,10" stroke="currentColor" fill="none" stroke-width="2" 
              stroke-linecap="round" vector-effect="non-scaling-stroke" />
    </svg>

    <!-- Hand-drawn circles -->
    <svg class="hand-drawn-circle" viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="45" stroke="currentColor" fill="none" stroke-width="2"
                stroke-dasharray="4,4" vector-effect="non-scaling-stroke" />
    </svg>

    <!-- Sketchy underline -->
    <svg class="sketchy-underline" viewBox="0 0 100 10" preserveAspectRatio="none">
        <path d="M0,5 C20,8 40,2 60,5 S80,8 100,5" stroke="currentColor" fill="none" 
              stroke-width="1" vector-effect="non-scaling-stroke" />
    </svg>
</div>

<style>
.organic-decorations {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
}

.brush-stroke {
    position: absolute;
    width: 100%;
    height: 20px;
    color: var(--color-accent-terracotta);
    opacity: 0.1;
    transform-origin: center;
}

.hand-drawn-circle {
    position: absolute;
    width: 100px;
    height: 100px;
    color: var(--color-accent-mustard);
    opacity: 0.1;
    animation: rotate 20s linear infinite;
    animation-play-state: var(--reduced-motion, running);
}

.sketchy-underline {
    position: absolute;
    width: 100%;
    height: 10px;
    color: var(--color-accent-teal);
    opacity: 0.1;
    animation: wave 10s ease-in-out infinite;
    animation-play-state: var(--reduced-motion, running);
}

/* Positioning */
.brush-stroke:nth-of-type(1) { top: 10%; transform: rotate(2deg); }
.brush-stroke:nth-of-type(2) { bottom: 15%; transform: rotate(-1deg); }

.hand-drawn-circle:nth-of-type(1) { top: 20%; right: 10%; }
.hand-drawn-circle:nth-of-type(2) { bottom: 30%; left: 5%; }

.sketchy-underline:nth-of-type(1) { top: 45%; }
.sketchy-underline:nth-of-type(2) { bottom: 25%; }

@keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

@keyframes wave {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(10px); }
}

/* Dark mode adjustments */
.dark-mode .organic-decorations svg {
    opacity: 0.05;
    filter: brightness(0.8);
}
</style>
